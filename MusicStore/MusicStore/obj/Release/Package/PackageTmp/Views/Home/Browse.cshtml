@using MusicStore.Models
@model IEnumerable<Album>


@{
    ViewBag.Title = "Browse";
    }

<h2>Music Album available in @ViewBag.CatagoryName Catagory</h2>
<span>Count :  @Model.Count()</span><br />
<div>
 @{
        foreach(MusicStore.Models.Album item in Model)
        {
            <div style="padding:10px;float:left;text-align:center;">
            <a href="~/Home/Details/@item.AlbumId">
                <img src="~/Images/images.jpg" width="150px" height="80px" border="1" /><br />
                <span>@item.Title</span>

           </a>            
           </div>
        }
    }
</div>